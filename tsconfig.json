{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "checkJs": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "src/styles/global.css"
  ],
  "exclude": [
    "node_modules/*",
    ".next",
    "out",
    "build",
    "dist",
    "supabase",
    "generate_telegram_session.js",
    "generate_telegram_session.cjs",
    "check_pending_updates.js",
    "webhook_code_for_dashboard.ts",
    "deploy_manual.js",
    "test_bot.js",
    "test_webhook_direct.js",
    "setup_telegram_bot.js",
    "test_reddit_api.js",
    "test_reddit_token.js",
    "test_reddit_token.cjs",
    "test_edge_function.js"
  ]
}
